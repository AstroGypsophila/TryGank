    <style name="AppTheme.NoActionBar">
        <!--父主题是带有ActionBar，而本身项目使用toolbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>

    <style name="AppTheme.ToolBar.Custom" parent="AppTheme">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--背景色值-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--标题与menu item颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--NavigationIcon, MenuIcon的颜色:-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <!--由于toolbar中的colorPrimary统一了title与menu item中颜色-->
